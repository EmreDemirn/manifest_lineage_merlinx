<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- remote list -->
    <remote
        name="sunfish"
        fetch="https://github.com/team-sunfish"
        revision="lineage-21"
    />
    <remote name="lineageos"
        fetch="https://github.com/LineageOS"
        revision="lineage-21"
    />
